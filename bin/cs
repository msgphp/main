#!/usr/bin/env bash

BIN="vendor/bin/php-cs-fixer"
CMD="${BIN} fix --dry-run --verbose --diff ${@:-src/}"

if [[ $TRAVIS = true ]] ; then
    source .travis/php_no_xdebug
    CMD="php_no_xdebug ${CMD}"
fi

if [[ ! -f $BIN ]] ; then
    composer update --no-progress --prefer-dist --no-interaction --no-suggest
fi

${CMD}
