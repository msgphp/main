#!/usr/bin/env bash

if [[ $# -eq 0 ]] ; then
    DIR="src/"
elif [[ -d $1 ]] ; then
    DIR="$1"
    shift;
else
    DIR="src/$(echo $1 | sed -r 's/(^|-)(\w)/\U\2/g')"
    shift;
fi

BIN="vendor/bin/php-cs-fixer"
CMD="${BIN} fix --dry-run --verbose --diff ${@} ${DIR}"

if [[ ! -f $BIN ]] ; then
    composer update --no-progress --prefer-dist --no-interaction --no-suggest
    [[ $? -ne 0 ]] && exit 1
fi

${CMD}
