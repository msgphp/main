{
    "description": "Composer configuration for bulk CI testing of packages",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "wikimedia/composer-merge-plugin": "^1.4",
        "phpstan/phpstan-shim": "^0.10",
        "phpstan/phpstan-phpunit": "^0.10",
        "phpunit/phpunit": "^7.4",
        "ro0nl/link": "^1.0",
        "symfony/config": "^4.2",
        "twig/twig": "^2.5"
    },
    "autoload-dev": {
        "psr-4": {
            "MsgPhp\\": "src/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "src/*/composer.json"
            ]
        }
    },
    "replace": {
        "msgphp/domain": "*",
        "msgphp/eav": "*",
        "msgphp/eav-bundle": "*",
        "msgphp/user": "*",
        "msgphp/user-bundle": "*",
        "msgphp/user-eav": "*"
    }
}
