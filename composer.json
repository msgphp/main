{
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "autoload-dev": {
        "psr-4": {
            "MsgPhp\\": "src/"
        }
    },
    "extra": {
        "merge-plugin": {
            "require": [
                "src/*/composer.json"
            ],
            "recurse": false
        }
    },
    "replace": {
        "msgphp/domain": "*",
        "msgphp/eav": "*",
        "msgphp/eav-bundle": "*",
        "msgphp/user": "*",
        "msgphp/user-bundle": "*",
        "msgphp/user-eav": "*"
    }
}
