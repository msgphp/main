{
    "description": "Composer configuration for bulk CI testing of packages",
    "require-dev": {
        "wikimedia/composer-merge-plugin": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.9",
        "phpstan/phpstan": "^0.9@dev",
        "phpstan/phpstan-phpunit": "^0.9",
        "ro0nl/link": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "MsgPhp\\": "src/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "src/*/composer.json"
            ]
        }
    },
    "replace": {
        "msgphp/domain": "*",
        "msgphp/eav": "*",
        "msgphp/eav-bundle": "*",
        "msgphp/user": "*",
        "msgphp/user-bundle": "*"
    }
}
