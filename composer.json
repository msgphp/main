{
    "description": "Composer configuration for bulk CI testing of components & bundles",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-phpunit": "^0.9",
        "phpunit/phpunit": "^6.5",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "autoload-dev": {
        "psr-4": {
            "MsgPhp\\": "src/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "src/*/composer.json"
            ]
        }
    },
    "replace": {
        "msgphp/domain": "*",
        "msgphp/eav": "*",
        "msgphp/eav-bundle": "*",
        "msgphp/user": "*",
        "msgphp/user-bundle": "*"
    }
}
